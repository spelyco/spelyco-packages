{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"prebuild": {
			"cache": false,
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		}
	}
}
