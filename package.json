{
	"name": "spelyco",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "turbo run dev --filter=@spelyco/web",
		"clean": "turbo run clean && rm -rf node_modules",
		"test": "turbo run test",
		"create": "yarn run scripts/create-package.ts",
		"lint": "turbo run format",
		"lint:check": "turbo run format:check"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"turbo": "^2.3.3",
		"tsup": "^8.0.2",
		"@swc/core": "^1.4.0"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "yarn@1.22.22"
}
